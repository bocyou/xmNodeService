/*刮奖区*/
.draw-area{
width:100%;
  height:100%;

  background-color: #fff;
}
.draw-money{
    text-align:center;
    width:100%;
    height:100%;
    color:#fff;
    font-size:36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.monster {
  width: 220rpx;
  height: 220rpx;
  background-color: #E55A54;
  border-radius: 50px;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  cursor: pointer;
  margin: 10rpx;
  box-shadow: 0rpx 20rpx 40rpx rgba(0, 0, 0, 0.2);
  position: relative;
  animation: jumping 0.8s infinite alternate;

    overflow:hidden;
}
.monster .eye {
  width: 36%;
  height: 36%;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
    position:relative;
    z-index: 2;
    border:16rpx solid #000;
}
.monster .eyeball {
  width: 50%;
  height: 50%;
  border-radius: 50%;
  background-color: #0C4475;

}
.monster .black-bar{
  width:100%;
  height:20rpx;
  background-color:#000;
    position:absolute;
    top:50%;
    left:0;
    z-index: 1;
}
.pageLoading .draw-tip{
    color:#fff;
    font-size:36rpx;
    text-align:center;
    opacity: 0;
    animation: showtip 0.8s infinite alternate;
    animation-delay:4s;
}
.monster .white-block{
    position:absolute;
    bottom:0;
    left:0;
    width:100%;
    height:110rpx;
    background-color:#fff;
}
