  overflow:hidden;
}
.header{
  height:60vh;
}
.header .imgbox{
  width:100rpx;
  height:100rpx;
  border-radius:6rpx;
  
  margin:70rpx auto 10rpx;
}

.header .description{
  color:#717171;
  font-size:24rpx;
  text-align:center;
  width:90%;
  margin:0 auto;
  padding-bottom:60rpx;

}
    
.form{
  padding:40rpx 30rpx 40rpx;
  font-size:24rpx;
}
.input-group{
  margin:30rpx 0;
}
.bottom{
  
}
.signup{
  width:300rpx;
  margin:0 auto;
  color:#f1f1f1;
  background-color:#3c2075;
  text-align:center;
  border-radius:100px;
  line-height:80rpx;
  font-size:26rpx;
  border:none;
  outline:none;
  list-style: none;
}
