/*地面*/

.ground {
   
    font-weight: 800;
    font-size: 180px;
    text-align: center;
    color: #dd4040;
    pointer-events: none;
}
.ground:before {
    content: '';
    display: block;
    width: 900rpx;
    height: 400rpx;
    position: absolute;
    left: 50%;
    margin-left: -450rpx;
    top: 50px;
    z-index: 1;
    border-radius: 100%;
    background-color: #e8f2f6;
    background-image: -webkit-linear-gradient(top, #dee8f1, #f6f9fa 60px);
    background-image: linear-gradient(to bottom, #dee8f1, #f6f9fa 60px);
}

.ground:after {
content:'';
display:block;
width:28px;
height:6px;
position:absolute;
left:50%;
margin-left:-23px;
top:54px;
z-index:2;

    background: #dd4040;
    border-radius: 100%;
    -webkit-transform: rotate(-15deg);
    transform: rotate(-15deg);
    box-shadow: -56px 12px 0 1px #dd4040, -126px 6px 0 2px #dd4040, -196px 24px 0 3px #dd4040;
}

