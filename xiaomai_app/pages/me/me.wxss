/* pages/me/me.wxss */
page{
    background-color: #fafafa;
    padding-left:50rpx;
}

.header{
padding:0 30rpx;

}
.header .user-info{
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding:60rpx 0 80rpx;
}
.header .user-info .user-face{
    width:100rpx;
    height:100rpx;
    overflow:hidden;
    border-radius: 6rpx;
    box-shadow: 4rpx 4rpx 16rpx rgba(0,0,0,.06);
}
.header .user-info .user-txt{
    padding-left:30rpx;
}
.header .user-info .user-txt .area{
    font-size:24rpx;
    color:#757575;
    margin-top:4rpx;
}
.header .user-info .user-txt .user-name{
    color:#000;
    font-size:32rpx;
    padding-top:6rpx;
}
.header image{
  width:300rpx;
  border-radius:0 0 20rpx 20rpx;
  display: block;
  margin:0 auto;
}
.header .img-box .refresh-btn{
   position:absolute;
    bottom:10rpx;
    right:10rpx;
    width:40rpx;
    height:40rpx;
    opacity: .6;
    background:url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/icon_refresh.png") no-repeat center;
    background-size:contain;
}

.block-box{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding:0 30rpx;
}
.shadow-block{
    width:300rpx;
    height:260rpx;
    border-radius:10rpx;
    box-shadow: 0 0 30rpx rgba(0,0,0,.04);
    background-color:#fff;
    position:relative;
}
.shadow-block .title{
    font-size:24rpx;
    color:#757575;
    position:absolute;
    bottom:30rpx;
    left:30rpx;
}
.shadow-block  .num{
    font-size:26rpx;
    padding:66rpx 30rpx 0;
    color:#717171;

}
.shadow-block  .num text{
    font-size:80rpx;
    color:#dd4b39;
    display: inline-block;
    font-weight: 500;
    padding-left:10rpx;

}

.contact{
  color:#656576;
  font-size:30rpx;
  border:none;
  text-align: inherit;
  background-color:initial;
  box-shadow: none;
  box-sizing: inherit;
  transform: initial;
}
.content{


}
.bill{
    position:absolute;
    bottom:60rpx;
    right:30rpx;
    background-color:#fff;
    box-shadow:0 0 80rpx rgba(0,0,0,.2);
    border-radius: 16rpx;
    padding:20rpx 40rpx;

}
.bill-list .tip{
    color:#717171;
    font-size:28rpx;
}
.bill .money{
    font-size:28rpx;
    color:#3c2075;
}
.bill .money text{
    font-size:60rpx;
    font-weight:bold;
    margin-bottom:10rpx;

}
.bill .txt{
    font-size:24rpx;
    color:#717171;
}

.bill-content .title{
    text-align:left;
    font-size:30rpx;
    color:#717171;
    margin-bottom:30rpx;
    background-color:#eaeaeb;
    padding:30rpx;
}
.bill-content .title text{
    font-size:24rpx;
    color: rgba(0, 0, 0, 0.4);
}
.bill-content .bar{
    display:flex;
    align-items:center;
    justify-content: space-between;
    color:#717171;
    padding:30rpx;
}
.bill-content .bar .th{
    font-size:24rpx!important;
    color: #bebebe;
}

.bill-content .bar .status{
    width:18rpx;
    height:18rpx;
    border:4rpx solid red;
    border-radius:50px;
}
.bill-content .bar .money{
    font-size:28rpx;
    width:140rpx;
}
.bill-content .bar .money text{
    font-size:38rpx;
    font-weight: bold;
}
.bill-content .bar .date{
    font-size:28rpx;
    width:160rpx;

}
.bill-content .bar .pay-money{
    background-color:red;
    color:#fff;
    display:inline-block;
    padding:15rpx 30rpx;
    border-radius: 8rpx;
    font-size:24rpx;
}
.bill-content .bar .editor{
    width:180rpx;
}
.bill-content .thead{
    padding-bottom:0;
}
.bill-no{
    position:relative;
    color: #b3b3b3;

}
.bill-no .text{
    font-weight: normal;
}
.bill-no .line{
    width:100rpx;
    height:1px;
    background-color:red;
    position:absolute;
    top:26rpx;
    left:-6rpx;
    transform: rotate(25deg);
    opacity: .5;
}
.not-bill-tip{
    font-size:28rpx;
    color:#717171;
   text-align: left;

    padding:30rpx;
}
.not-bill-tip text{
    font-size:24rpx;
    color: rgba(0, 0, 0, 0.4);
}
.service-btn{


    border:1px solid #eaeaeb;
    border-radius: initial;
    outline: none;
    box-shadow: none;
    line-height:inherit;


}
.menu-option{
    display:flex;
    align-items: center;
    justify-content: space-between;
    padding:36rpx 30rpx;
    color:#717171;
    font-size:30rpx;
    background-color: #f5f5f6;
    margin-bottom:1rpx;
}
.service-btn .text{
      font-size:24rpx;
  }


button::after{
    border:none;
}
button{
    margin:0;
    padding:0;
    background-color: transparent!important;
    line-height: initial;
}
.right-icon{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon_right.png");
    background-repeat: no-repeat;
    width:26rpx;
    height:26rpx;
    background-size:contain;
    opacity: .36;

}
.navigator-hover{
    background-color: initial;
}


.shadow-box{
    box-shadow:0 0 60rpx rgba(0,0,0,.05);
    margin:30rpx;
    padding:30rpx 40rpx;
    border-radius:16rpx;
    background-color: #fff;
}


.shadow-box .info-block{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-top:60rpx;



}
.shadow-box  .info-block .right{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex:1;
    border-bottom:2rpx solid #e6e6e6;
    padding-bottom:30rpx;
   margin-left:30rpx;
}

.shadow-box .info{
    color:#272727;
    font-size:28rpx;
    flex: 1;
    text-align:left;

}
.shadow-box .info-block .icon{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon_right.png");
    background-repeat: no-repeat;
    width:50rpx;
    height:50rpx;
    background-size:cover;
}


.shadow-box .go-icon{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon_right.png");
    background-repeat: no-repeat;
    width:26rpx;
    height:26rpx;
    background-size:contain;
    opacity: .5;

}

.shadow-box .info-block .icon-bill{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/bill.png")!important;
    margin-top:-8rpx;
    margin-left:-4rpx;
}
.shadow-box .info-block .icon-rule{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/ruls.png")!important;
    margin-top:-6rpx;
}
.shadow-box .info-block .icon-code{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/code.png")!important;
    margin-top:-2rpx;
    width:40rpx;
    height:40rpx;
}
.shadow-box .info-block .icon-pay{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/pay.png")!important;
    margin-top:-6rpx;
    opacity: .8;
}

.shadow-box .info-block .icon-share{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/share.png")!important;
    margin-top:-4rpx;
    width:38rpx;
    height:38rpx;
    opacity: .8;
}

















