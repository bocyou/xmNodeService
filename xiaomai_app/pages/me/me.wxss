/* pages/me/me.wxss */
page{
    background-color: #f5f6f8;
}

.header{


}
.header image{
  width:300rpx;
  border-radius:0 0 20rpx 20rpx;
  display: block;
  margin:0 auto;
}
.header .img-box .refresh-btn{
   position:absolute;
    bottom:10rpx;
    right:10rpx;
    width:40rpx;
    height:40rpx;
    opacity: .6;
    background:url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/icon_refresh.png") no-repeat center;
    background-size:contain;
}

.user-info{
   width:300rpx;
    margin:0 auto;
    color:#3c3f58;
    font-size:46rpx;
    margin-top:66rpx;
}
.area{
  color:#656576;
  font-size:30rpx;
  margin-top:10rpx;
}
.contact{
  color:#656576;
  font-size:30rpx;
  border:none;
  text-align: inherit;
  background-color:initial;
  box-shadow: none;
  box-sizing: inherit;
  transform: initial;
}
.content{


}
.bill{
    position:absolute;
    bottom:60rpx;
    right:30rpx;
    background-color:#fff;
    box-shadow:0 0 80rpx rgba(0,0,0,.2);
    border-radius: 16rpx;
    padding:20rpx 40rpx;

}
.bill-list .tip{
    color:#717171;
    font-size:28rpx;
}
.bill .money{
    font-size:28rpx;
    color:#3c2075;
}
.bill .money text{
    font-size:60rpx;
    font-weight:bold;
    margin-bottom:10rpx;

}
.bill .txt{
    font-size:24rpx;
    color:#717171;
}

.bill-content .title{
    text-align:left;
    font-size:30rpx;
    color:#717171;
    margin-bottom:30rpx;
    background-color:#eaeaeb;
    padding:30rpx;
}
.bill-content .title text{
    font-size:24rpx;
    color: rgba(0, 0, 0, 0.4);
}
.bill-content .bar{
    display:flex;
    align-items:center;
    justify-content: space-between;
    color:#717171;
    padding:30rpx;
}
.bill-content .bar .th{
    font-size:24rpx!important;
    color: #bebebe;
}

.bill-content .bar .status{
    width:18rpx;
    height:18rpx;
    border:4rpx solid red;
    border-radius:50px;
}
.bill-content .bar .money{
    font-size:28rpx;
    width:140rpx;
}
.bill-content .bar .money text{
    font-size:38rpx;
    font-weight: bold;
}
.bill-content .bar .date{
    font-size:28rpx;
    width:160rpx;

}
.bill-content .bar .pay-money{
    background-color:red;
    color:#fff;
    display:inline-block;
    padding:15rpx 30rpx;
    border-radius: 8rpx;
    font-size:24rpx;
}
.bill-content .bar .editor{
    width:180rpx;
}
.bill-content .thead{
    padding-bottom:0;
}
.bill-no{
    position:relative;
    color: #b3b3b3;

}
.bill-no .text{
    font-weight: normal;
}
.bill-no .line{
    width:100rpx;
    height:1px;
    background-color:red;
    position:absolute;
    top:26rpx;
    left:-6rpx;
    transform: rotate(25deg);
    opacity: .5;
}
.not-bill-tip{
    font-size:28rpx;
    color:#717171;
   text-align: left;

    padding:30rpx;
}
.not-bill-tip text{
    font-size:24rpx;
    color: rgba(0, 0, 0, 0.4);
}
.service-btn{


    border:1px solid #eaeaeb;
    border-radius: initial;
    outline: none;
    box-shadow: none;
    line-height:inherit;


}
.menu-option{
    display:flex;
    align-items: center;
    justify-content: space-between;
    padding:36rpx 30rpx;
    color:#717171;
    font-size:30rpx;
    background-color: #f5f5f6;
    margin-bottom:1rpx;
}
.service-btn .text{
      font-size:24rpx;
  }


button::after{
    border:none;
}
.right-icon{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon_right.png");
    background-repeat: no-repeat;
    width:26rpx;
    height:26rpx;
    background-size:contain;
    opacity: .5;

}
.navigator-hover{
    background-color: initial;
}


.shadow-box{
    box-shadow:0 0 80rpx rgba(0,0,0,.1);
    margin:30rpx;
    padding:30rpx 40rpx;
    border-radius:16rpx;
    background-color: #fff;
}


.shadow-box .info-block{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-top:30rpx;


}
.shadow-box  .info-block .right{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex:1;
    border-bottom:2rpx solid #e6e6e6;
    padding-bottom:30rpx;
}

.shadow-box .info{
    color:#272727;
    font-size:28rpx;
    flex: 1;
    text-align:left;
    padding-left:20rpx;
}
.shadow-box .info-block .icon{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon_right.png");
    background-repeat: no-repeat;
    width:50rpx;
    height:50rpx;
    background-size:cover;
}


.shadow-box .go-icon{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon_right.png");
    background-repeat: no-repeat;
    width:26rpx;
    height:26rpx;
    background-size:contain;
    opacity: .5;

}
.icon-rule{
    background-image: url("https://official-web.oss-cn-beijing.aliyuncs.com/mini_program/xiaomai/icon/ruls.png")!important;
}






















