<!--pages/me/me.wxml-->
<block wx:if="{{version==1}}">
    <view class="header">
        <view class="img-box">
            <view bindtap="refreshFace" style="position:relative;width:300rpx;height:300rpx;margin:0 auto;background-size:cover;border-radius:0 0 20rpx 20rpx;background-image:url({{user_info.wx_img}})">

                <!--<view class="refresh-btn" bindtap="refreshFace"></view>-->
            </view>

        </view>

        <view style="position:relative; border-bottom:2px solid #eaeaeb;padding-bottom:60rpx">
            <view class="user-info">
                <view> {{user_info.user_name}}</view>
                <view class="area">{{user_area[user_info.area]}}校区</view>
            </view>
            <view class="bill">
                <view class="money">¥
                    <text>{{bill_money}}</text>
                </view>
                <view class="txt">
                    {{week_txt}}
                </view>
            </view>
        </view>
    </view>

    <button class="service-btn menu-option" open-type="contact" session-from="imgcode">
        <view>获取付款二维码<text class="text"> (若获取不到请发送<text class="tip"> pay</text>)</text>
        </view>
        <view class="right-icon"></view>
    </button>
    <navigator class="menu-option" url="../bill/bill" hover-class="navigator-hover">
        <view>账单信息</view>
        <view class="right-icon"></view>
    </navigator>
    <view class="menu-option" style="margin-top:2rpx;" >
        <view>钱包余额</view>
        <view class="">{{user_wallet}}</view>
    </view>
    <view class="content">
        <view class="bill-list">
            <block wx:if="{{bill_ary.length>0}}">
                <!--    <view class="">本周账单已出</view>
                    <view class="tip">请于周一前付款给王老师</view>-->
            </block>

            <block wx:else>
                <view class="not-bill-tip">您尚无拖欠账单
                    <text>(每周-账单日)</text>
                </view>
            </block>

        </view>
    </view>


    <block wx:if="{{bill_ary.length>0}}">
        <view class="bill-content">
            <view class="title">您有未支付账单
                <text>（请转账给王老师后点击下方确认付钱）</text>
            </view>


            <block class="bar" wx:for="{{bill_ary}}" wx:key="i">
                <block wx:if="{{item.deduction>0}}">
                    <view class="bar thead">
                        <view class="th money">本期应付</view>
                        <view class="th money ">本期账单</view>
                        <view class="th date">账单日</view>
                        <view class="th editor"></view>
                    </view>
                    <view class="bar">
                        <view class="money">¥

                            <text>{{item.money-item.deduction}}</text>
                        </view>
                        <view class="money bill-no">¥

                            <text>{{item.money}}</text>
                            <view class="line"></view>
                        </view>
                        <view class="date">{{item.create_time}}</view>
                        <view class="editor">
                            <block wx:if="{{item.money==item.deduction}}">
                                <view class="pay-money" bindtap="payBegMoney" data-billid="{{item.bill_id}}">确认</view>
                            </block>
                            <block wx:else>
                                <view class="pay-money" bindtap="payMoney" data-billid="{{item.bill_id}}">确认付钱</view>
                            </block>


                        </view>
                    </view>

                </block>
                <block wx:else>
                    <view class="bar thead">
                        <view class="th money">本期应付</view>

                        <view class="th date">账单日</view>
                        <view class="th editor"></view>
                    </view>
                    <view class="bar">
                        <view class="money">¥

                            <text>{{item.money}}</text>
                        </view>

                        <view class="date">{{item.create_time}}</view>
                        <view class="editor">
                            <view class="pay-money" bindtap="payMoney" data-billid="{{item.bill_id}}">确认付钱</view>

                        </view>
                    </view>

                </block>


            </block>
        </view>
    </block>
</block>
<block wx:elif="{{version==0}}">
    <view class="xm-title">小麦查词</view>
    <view class="xm-last-search">最近一次搜索</view>
    <view class="xm-word">{{search_word}}</view>
</block>
<block wx:else>
    <view class="loading-main">
        加载中……
    </view>
</block>
