/* pages/pay/pay.wxss */
.pay-btn{
    width:90%;
    margin:0 auto;
    line-height:100rpx;
    background-color:#000;
    color:#fff;
    text-align: center;
    box-shadow: 4rpx 4rpx 10rpx rgba(0,0,0,.4);
    font-size:40rpx;
    margin-top:120rpx;
}
.placeholder-style{
    font-size:20rpx;

}
.user-pay{
    width:90%;
    margin:0 auto;
    padding-top:160rpx;

}
.user-pay input{
    font-size:50rpx;

    height:80rpx;
}

.err-tip{
    height:60rpx;
    font-size:26rpx;
    color: #a10017;
}
.border{
    height:2rpx;
    background-color:#919191;
    margin-top:10rpx;
    margin-bottom:10rpx;
}
.pay-title{
    font-size:36rpx;
    color:#000;
    font-weight:bold;
    text-align: center;
    margin:100rpx 0 0;
}